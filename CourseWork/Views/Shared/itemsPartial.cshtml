@model List<CourseWork.Domain.Entities.Item>

<div class="container">
	@if (!Model.Any())
	{
		<h4 class="text-center">Коллекция пуста</h4>
	}
	else
	{
		<h3 class="text-center">Айтемы</h3>
		@foreach (var item in Model)
		{
			<a class="list-group-item list-group-item-action list-group-item-light" href="/Item/GetItem/@item.Id">@item.Name</a>
		}
	}
</div>