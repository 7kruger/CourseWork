@model CourseWork.Domain.ViewModels.Profile.ProfileViewModel

@{
    ViewData["Title"] = "Settings";
}

<h2 class="text-center">Настройка профиля</h2>
<div class="container text-center custom-group-form">

	<div class="d-flex justify-content-center">
		<div class="parent">
			<img class="avatar lazy"
				 src="data:image/gif;base64,R0lGODlhBwAFAIAAAP///wAAACH5BAEAAAEALAAAAAAHAAUAAAIFjI+puwUAOw=="
				 data-src="@Model.ImgRef"
				 onError="this.src='/images/avatar.png'"
				 alt="avatar_logo">
		</div>
	</div>

	<form asp-action="Settings" asp-controller="Profile" enctype="multipart/form-data" method="post">

		<div>
			<input type="text" asp-for="Username" value="@Model.Username" hidden />
			<div class="form-group">
				<input class="form-control" type="text" value="@Model.Username" disabled="disabled" />
			</div>
		</div>

		<div class="form-group mb-2">
			<label asp-for="ImgRef">Загрузить свой аватар</label>
			<input type="file" name="image" />
		</div>

		<div>
			<button class="btn btn-outline-primary" type="submit">Сохранить</button>
		</div>
	</form>
</div>

@section Scripts {
	<script>
		var lazyLoadInstance = new LazyLoad({
			elements_selector: ".lazy"
		});
	</script>
}