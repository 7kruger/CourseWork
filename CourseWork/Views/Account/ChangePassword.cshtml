@model CourseWork.Domain.ViewModels.Account.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="container text-center custom-group-form">
    <form asp-action="ChangePassword" asp-controller="Account" method="post">
        <div class="validation" asp-validation-summary="All"></div>
        
        <div>
            <input type="text" asp-for="Name" value="@User.Identity.Name" hidden />
            <div class="form-group">
                <input class="form-control" type="text" value="@User.Identity.Name" disabled="disabled" />
            </div>
        </div>

        <div class="form-group">
            <input class="form-control" asp-for="NewPassword" placeholder="новый пароль" />
        </div>

        <div class="form-group">
            <input class="form-control" asp-for="ConfirmPassword" placeholder="повторите новый пароль" />
        </div>

        <div>
            <button class="btn btn-outline-primary">Сохранить</button>
        </div>
    </form>
</div>

